# Maintainer: Maxim Reznik <reznikmm@gmail.com>

_realname=libgnatutil
pkgname=${MINGW_PACKAGE_PREFIX}-${_realname}
pkgrel=2
pkgver=6.3.0
pkgdesc="Provides internal GNAT compiler components in a library which is used by (at least) ASIS and GNATColl."
arch=('any')
license=('GPL3')
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc-ada"
             "${MINGW_PACKAGE_PREFIX}-gprbuild"
            )
depends=("${MINGW_PACKAGE_PREFIX}-gcc-ada")
url="https://sourceforge.net/projects/gnatutil/"
source=("http://www.ada-ru.org/files/gnat_util-6.3.0.tar.gz")
sha256sums=('f3e8df52bd58a4f38ad8bfab2bb399a58b1306f311970863d1d72038b9e774d5')

prepare()
{
  cd ${srcdir}/gnat_util-${pkgver}
}

build() {
  cd ${srcdir}/gnat_util-${pkgver}
  gprbuild -p -P gnat_util.gpr
}

package() {
  cd ${srcdir}/gnat_util-${pkgver}
  gprinstall --prefix="${pkgdir}${MINGW_PREFIX}" -p -P gnat_util.gpr
}
